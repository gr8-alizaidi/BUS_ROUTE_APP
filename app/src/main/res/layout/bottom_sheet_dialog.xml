<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="false"
    app:behavior_peekHeight="42dp"
    android:padding="10sp"
    android:background="@color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:id="@+id/llayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/busimg"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="50dp"
                    android:src="@drawable/img_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/route"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/route"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="534"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:textStyle="bold"
                    android:textSize="38sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/busimg"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_weight="5"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="towards Mehrauli Terminal"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/busno"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="DL 14C 1234"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    app:layout_constraintHorizontal_weight="4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/dot"
                    app:layout_constraintTop_toBottomOf="@+id/destination"
                    tools:ignore="NotSibling"
                    android:layout_marginEnd="2dp"/>

                <TextView
                    android:id="@+id/dot"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text="â€¢"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@id/busno"
                    app:layout_constraintRight_toLeftOf="@+id/peopleImg"
                    app:layout_constraintTop_toBottomOf="@+id/destination"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:id="@+id/peopleImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_people_24"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintLeft_toRightOf="@+id/busno"
                    app:layout_constraintRight_toLeftOf="@+id/capNo"
                    app:layout_constraintTop_toBottomOf="@+id/destination"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/capNo"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="12-15"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    app:layout_constraintHorizontal_weight="3"
                    app:layout_constraintLeft_toRightOf="@id/peopleImg"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/destination"
                    tools:ignore="NotSibling" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/white"
                android:text="Route"
                android:textColor="@color/black"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_baseline_call_split_24"
                app:iconTint="@color/teal_200"
                android:shadowColor="@color/black"
                android:elevation="4dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="@color/white"
                android:text="Schedule"
                android:textColor="@color/black"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_baseline_calendar_month_24"
                app:iconTint="@color/teal_200"
                android:shadowColor="@color/black"
                android:elevation="4dp"
                />
        </LinearLayout>
    <TextView

        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Updated few seconds ago"
        android:layout_marginTop="4dp"
        android:textStyle="italic"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"
                />
        </LinearLayout>
</RelativeLayout>